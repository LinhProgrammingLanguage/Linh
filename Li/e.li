  case 1:
    tenNgay = "Chủ Nhật";
    break;
  case 2:
    tenNgay = "Thứ Hai";
    break;
  case 3:
    tenNgay = "Thứ Ba";
    break;
  case 4:
    tenNgay = "Thứ Tư";
    break;
  case 5:
    tenNgay = "Thứ Năm";
    break;
  case 6:
    tenNgay = "Thứ Sáu";
    break;
