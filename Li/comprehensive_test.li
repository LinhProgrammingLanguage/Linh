// --- 15. Kiểm tra if/else if/else ---
var x = 10
if (x < 5) {
    print("if: x < 5")
} else if (x < 15) {
    print("else if: x < 15")
} else {
    print("else: x >= 15")
}

// --- 16. Kiểm tra switch/case ---
var y = 2
switch (y) {
    case 1:
        print("switch: y = 1")
        break
    case 2:
        print("switch: y = 2")
        break
    default:
        print("switch: default")
        break
} 

// --- 17. Kiểm tra chuyển đổi kiểu dữ liệu ---
var a = 123
var b = 3.14
var c = "456"
var d = "7.89"
var e = 0
var f = "True"

// int -> float, str
print("int to float: &{float(a)}")
print("int to str: &{str(a)}")

// float -> int, str
print("float to int: &{int(b)}")
print("float to str: &{str(b)}")

// str -> int, float
print("str to int: &{int(c)}")
print("str to float: &{float(d)}")

// int/float -> bool
print("int 0 to bool: &{bool(e)}")
print("int 123 to bool: &{bool(a)}")
print("float 0.0 to bool: &{bool(0.0)}")
print("float 3.14 to bool: &{bool(b)}")

// str -> bool (nếu ngôn ngữ hỗ trợ)
print("str 'True' to bool: &{bool(f)}")
print("str '' to bool: &{bool("")}")

// bool -> int, str
print("bool True to int: &{int(true)}")
print("bool False to int: &{int(false)}")
print("bool True to str: &{str(true)}")
print("bool False to str: &{str(false)}") 